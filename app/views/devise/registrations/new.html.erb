<h2>Registrarse</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'panel panel-default'}) do |f| %>
  <%= f.error_notification %>
  <div class="panel-heading">Ingresa tus datos para registrarte</div>
  <div class="form-inputs panel-body">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} caracteres al menos" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions panel-footer">
    <%= f.button :submit, "Registrarse", class: 'btn btn-success' %>

  </div>
<% end %>

<%= render "devise/shared/links" %>
