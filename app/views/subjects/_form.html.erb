<%= simple_form_for(@subject, html: {class: 'panel panel-default'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs panel-heading">Crear nueva materia</div>
  <div class="form-inputs panel-body">
    <%= f.input :name, required: true, autofocus: true, label: "Nombre de la materia"%>
    <%= f.input :year, required: true, label: "Plan al que pertenece"%>
    <%= f.input :detail, required: true, label: "Descripcion"%>
  </div>
  <div class="form-actions panel-footer">
    <%= f.button :submit, "Crear materia", class: 'btn btn-success' %>
  </div>
<% end %>
