<%= simple_form_for(@student, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Nombre', class: 'form-group form-control' %>
    <%= f.input :surname, label: 'Apellido', class: 'form-group' %>
    <%= f.input :dni, label: 'DNI', class: 'form-group' %>
    <%= f.input :email, placeholder: 'mail@mail.com', class: 'form-group'%>
    <%= f.input :legajo, class: 'form-group' %>
    <%= f.input :course_ids, :as => :hidden, class: 'form-group', :input_html => { disabled:true, :value => params[:course_id]} %>
  </div>

  <div class="form-actions form-inline">
    <%= f.submit 'Aceptar', class: 'btn btn-info' %>
